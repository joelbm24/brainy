import sys
sys.path.append('../lib/')
from brainy import Brainy
bf = Brainy()

if len(sys.argv) > 1:
    try: f = open(sys.argv[1])
    except:
        print "File not found"
        quit()

    code = f.read()
    f.close()
    bf.eval(code)
    quit()

print "Welcome to the Brainy REPL"
print "To quit just type 'q' or press ctrl+d\n"
user_in = ''

while True:
    try: user_in = raw_input(">>> ")
    except (EOFError, KeyboardInterrupt):
        print "\nThank you, bye!"
        break

    if user_in == 'q':
        print "Thank you, bye!"
        break

    else:
        bf.eval(user_in)
        print bf.get_tape()
